/* pages/publishBusyness/index.wxss */
page{
  background: #f6f6f6;
  font-size: 16px;
}
.wrapper{
  width: 100%;
}
.wrapper .top{
  height: 20vh;
  width: 100%;
  background: #a77d6e;
  border-top: 1px solid #fff;
}

.wrapper .content view{
  width: 100%;
  height: 8vh;
  border: 1px solid #ccc;
  position: relative;
}
.wrapper .content .busynessDescription{
  height: 32vh;
}
.wrapper .content .busynessDescription textarea{
  height: 32vh;
  width: 540rpx;
  position: absolute;
  left: 200rpx;
  line-height: 5vh;
}
.wrapper .content view text{
  position: absolute;
  left: 20rpx;
  display: block;
  height: 8vh;
  line-height: 8vh;
}
.wrapper .content view input{
  position: absolute;
  left: 200rpx;
  height: 8vh;
  line-height: 8vh;
}
.wrapper .content view .busynessType{
  left: 200rpx;
}

.btn button{
  width: 25%;
  background: #a77d6e;
  color: #fff;
  margin-top: 5rpx;
  margin-left: 75%;
}