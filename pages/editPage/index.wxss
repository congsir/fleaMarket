/* pages/editPage/index.wxss */
page{
  background-color: #f6f6f6;
}
.top{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 20vh;
  background: #a77d6e;
  border-top: 1px solid #fff;
}
.top image{
  display: block;
  width: 15vh;
  height: 15vh;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 50rpx;
}
.top .addPicture{
  width: 15vh;
  height: 15vh;
  border-radius: 50%;
  background-color: #fff;
  margin-left: 50rpx;
  position: relative;
}
.addPicture::before,.addPicture::after{
  content: '';
  display: block;
  width: 10vh;
  height: 15rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -5vh;
  margin-top: -7rpx;
   background: #a77d6e; 
}
.addPicture::after{
  transform: rotateZ(90deg);
}
.content view{
  width: 100%;
  height: 120rpx;
  border: 1px solid #797979;
  position: relative;
}
.content view text{
   position: absolute;
   left: 30rpx;
   top: 50%;
   transform: translateY(-50%);
}
.content view input{
  position: absolute;
  left: 240rpx;
  top: 50%;
  transform: translateY(-45%);
}