page{
  background-color: #f6f6f6;
  font-size: 18px;
}
.navgator{
  height: 8vh;
  background-color: #a77d6e;
  color: #eee;
}
.nav-left,.nav-right{
  box-sizing: border-box;
  width: 50%;
  height: 8vh;
  line-height: 8vh;
  text-align: center;
  float: left;
}
.bottomStyle{
  border-bottom: 3px solid #f6f6f6;
  color: #fff;
}
.content view,.historyContent view{
  position: relative;
  height: 14vh;
  width: 100%;
  background-color: #fff;
  border: 1px solid #a77d6e;
}
.content view .picture,.historyContent view .picture{
  position: absolute;
  left: 20rpx;
  top: 5%;
  width: 200rpx;
  height: 90%;
  border: 1px solid #a77d6e;
}
.content view image,.historyContent view image{
  width: 100%;
  height: 100%;
}
.content view text:nth-of-type(1),.historyContent view text:nth-of-type(1){
  position: absolute;
  left: 240rpx;
  top: 10rpx;
}
.content view text:nth-of-type(2),.historyContent view text:nth-of-type(2){
  position: absolute;
  right: 60rpx;
  bottom: 20rpx;
  color: red;
}
.historyContent view text:nth-of-type(3){
  position: absolute;
  left: 300rpx;
  bottom: 20rpx;
}
.show{
  display: block;
}
.hide{
  display: none;
}