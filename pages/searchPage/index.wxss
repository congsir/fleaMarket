/* pages/searchPage/index.wxss */

/*搜索框的样式  */
.wrapper{
  width: 100%;
}
.wrapper .top{
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #f2f2f2;
}
.wrapper .top::after{
  content: '';
  display: block;
  clear: both;
}
.wrapper .search{
  width: 600rpx;
  height: 50rpx;
  background: #f2f2f2;
  position: absolute;
  left:20rpx;
  top: 30rpx;
  border-radius: 25rpx;
}
.wrapper .search image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 30rpx;
  top: 8rpx;
}
.wrapper .search .line{
  display: block;
  height: 36rpx;
  width: 2px;
  background: #333;
  position: absolute;
  left:100rpx;
  top: 8rpx; 
}
.wrapper .search input{
  position: absolute;
  font-size: 12px;
  left: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  letter-spacing: 2px;
  color: #aaa;
}
/*取消按钮的样式  */
.wrapper .top button{
  position: absolute;
  height: 50rpx;
  font-size: 12px;
  line-height: 50rpx;
  right: 10rpx;
  top: 30rpx;
}
/*内容区的顶部样式  */
.wrapper .content{
  width: 100%;
}
.wrapper .content .content-top text:nth-of-type(1){
  position: absolute;
  font-size: 16px;
  left: 10rpx;
  top: 135rpx;
}
.wrapper .content .content-top text:nth-of-type(2){
  position: absolute;
  font-size: 14px;
  color: red;
  right: 20rpx;
  top: 135rpx;
}
.wrapper .content .content-top {
  margin-bottom: 30rpx;
}

/*热门搜索内容区样式  */

.wrapper .content .content-main{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  justify-content: space-around;
  margin-top: 100rpx;
}
.wrapper .content .content-main text{
  font-size: 14px;
  padding: 5rpx 15rpx;
  background-color: #f6f6f6;
  margin: 10rpx 15rpx;
}