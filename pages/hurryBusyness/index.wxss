/* pages/hurryBusyness/index.wxss */
page{
  background: #f6f6f6;
  font-size: 16px;
}
.wrapper .content{
    width: 100vw;
    display: flex;
    flex-wrap: wrap;
    align-content: flex-start;
    justify-content: space-around;
}
.wrapper .content view{
  width: 36vw;
  height: 30vh;
  margin: 20rpx 0;
  position: relative;
}
.wrapper .content view image{
  width: 40vw;
  height: 100%;
  position: absolute;
  left: -2vw;
  z-index: -1;
}
.wrapper .content view text:nth-of-type(1){
   position: absolute;
   font-size: 16px;
   top:35rpx;
   left: 25%;
}
.wrapper .content view text:nth-of-type(2){
  position: absolute;
  top: 95rpx;
  text-indent: 2rem;
  color: #236696;
  font-size: 14px;
}

.wrapper .content view text:nth-of-type(3){
  position: absolute;
  right: 10rpx;
  bottom: 35rpx;
  color: #f40;
  font-size: 16px;
}