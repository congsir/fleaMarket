/**index.wxss**/
 page{
  background-color: #f6f6f6;
}  
.container{
  width: 100%;
  height: 100vh;
}

/*轮播图样式  */
 swiper{
  width: 100%;
  height: 40vh;
  border-bottom: 1px solid #e5e5e5;
} 
swiper image{
  width: 100%;
  height:100%;
}

/*首页发布商品 发布任务按钮样式  */
.middleWrapper{
  position: relative;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 10vh;
  margin-top: 10rpx;
}
.middleLeft,.middleRight{
  width: 35%;
  height: 8vh;
  background-color: #fff;
  position: absolute;
  top: 1vh;
  border: 1px solid #e5e5e5;
}
.middleLeft{
  left: 80rpx;
}
.middleRight{
  right: 80rpx;
}
.middleWrapper image{
  position: absolute;
  left: 25rpx;
  top: 2vh;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.middleWrapper text{
  height: 8vh;
  line-height: 8vh;
  font-size: 30rpx;
  margin-left: 100rpx;
}

/*中间热门商品抬头样式  */

.middleNavgator{
  margin-top: 10rpx;
  width: 100%;
  height: 5vh;
  background-color: #fff;
}
.middleNavgator text{
  margin-left: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.middleNavgator image{
  width: 30rpx;
  height: 30rpx;
}

/*首页展示商品图片样式  */

.goodsShow{
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  align-content: flex-start;
}

.goodsShow view{
  position: relative;
   width: 40%;
   height: 400rpx;
   margin: 40rpx 0;
   border: 1px solid #e5e5e5;
}
.goodsShow image{
  width: 100%;
  height: 300rpx;
}
.goodsShow .content{
  display: block;
  font-size: 26rpx;
  overflow:hidden;         
  text-overflow:ellipsis; 
  white-space:nowrap;     
  text-indent: 1em;
}
.goodsShow .price{
  position: absolute;
  right: 30rpx;
  font-weight: bold;
  color: #f40;
}

/*搜索框样式  */

.container .search{
  width: 600rpx;
  height: 50rpx;
  background: #f2f2f2;
  position: absolute;
  left:50%;
  margin-left: -300rpx;
  top: 30rpx;
  border-radius: 25rpx;
}
.container .search image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 30rpx;
  top: 8rpx;
}
.container .search .line{
  display: block;
  height: 36rpx;
  width: 2px;
  background: #333;
  position: absolute;
  left:100rpx;
  top: 8rpx; 
}
.container .search text{
  position: absolute;
  font-size: 12px;
  left: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  letter-spacing: 2px;
  color: #aaa;
}

